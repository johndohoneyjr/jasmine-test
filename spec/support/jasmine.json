{
  "spec_dir": "spec",
  "spec_files": [
    "**/*[sS]pec.?(m)js"
  ],
  "helpers": [
    "helpers/**/*.?(m)js"
  ],
  "env": {
    "stopSpecOnExpectationFailure": false,
    "random": true
  },
    "reporters": [
      {
        "name": "jasmine-reporters#JUnitXmlReporter",
        "options": {
          "savePath": "junit-results"
        }
      }
    ]
}
